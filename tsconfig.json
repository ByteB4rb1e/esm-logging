{
    "compilerOptions": {
        "target": "es2015",
        "module": "nodenext",
        "strict": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "resolveJsonModule": false,
        "allowJs": false,
        "declaration": false,
        "declarationMap": false,
        "outDir": "build/release",
        "baseUrl": "./",
        "paths": { "*": ["node/modules/*"] },
        "lib": ["esnext.weakref", "dom"]
    },
    "include": [
        "src/**/*.ts"
    ]
}
